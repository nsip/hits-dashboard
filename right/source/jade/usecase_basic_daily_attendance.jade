block vars
    - page = 'Basic Daily Attendance';
    - area = 'Usecase';
block main

    .main-heading
        .main-title
            ol.breadcrumb
                li
                  a(href="usecase.html") Use Cases
                li.active Basic daily attendance
        // .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")

extends ./parts/layout.jade
block vars
    - page = 'Basic Daily Attendance';
    - area = 'Usecase';
block main

    .main-heading
        .main-title
            ol.breadcrumb
                li
                  a(href="usecase.html") Use Cases
                li.active Basic daily attendance
        // .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .pages.pages_dashboard
        .template
            .row
                .col-md-12
                    .panel.panel-info
                            .panel-heading
                                h2.panel-title How to implement basic daily attendance
                            .panel-body
                                 iframe(
                                  style="width:100%;margin:auto;",
                                  src="/usecases/basic_daily_attendance/hits-dashboard.html"
                                  frameborder="0"
                                  scrolling="no"
                                  onload="this.style.height = this.contentWindow.document.body.scrollHeight + 'px';"
                                )
block css
block js
    if !release
        script(src='js/template/index.js')

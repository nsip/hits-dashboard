    .container-fluid.half-padding
        .pages.pages_dashboard
        .template
            .row
                .col-md-12
                    .panel.panel-info
                            .panel-heading
                                h2.panel-title How to implement basic daily attendance
                            .panel-body
                                 include ../../../../usecases/output/basic_daily_attendance/hits-dashboard_raw.html

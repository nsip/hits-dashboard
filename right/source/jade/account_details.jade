extends ./parts/layout.jade
block vars
    - page = 'Account Details';
    - area = 'Admin';
    - development = false;
block main
    .main-heading
        .main-title
            ol.breadcrumb
                li
                    a(href="./") Admin
                li
                    a(href="admin.html") Accounts
                li.active Account Details
    .container-fluid.half-padding
        .alert.alert-success.emailSentSuccessMessage(role="alert", style="display: none;")
            i.alert-ico.fa.fa-fw.fa-check
            strong Email Sent!&thinsp;
            | Recovery email has been sent.
        .alert.alert-info.accountDeactivated(role="alert", style="display: none;")
            i.alert-ico.fa.fa-fw.fa-check
            strong Account Deactivated&thinsp;
            | This account has been deactivated, reactivate to be able to login as account, edit or email.
        .template.template__table_data
            .row
                .col-md-12
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Account Details
                        .panel-body
                          .container-fluid.half-padding
                            .row
                              .col-md-6.displayAccountDetails
                                .nameDiv
                                    span Name:&nbsp;
                                    span.accountName
                                .emailDiv
                                    span Email:&nbsp;
                                    span.accountEmail
                              .col-md-6.editAccountDetails(style="display:none;")
                                 .form-horizontal(style="margin-left: 34px;")
                                    .form-group
                                        .col-sm-10
                                            input.form-control.accountUpdateName(type="text", placeholder="Name")
                                    .form-group
                                        .col-sm-10
                                            input.form-control.acountUpdateEmail(type="email", placeholder="Email")
                                    .form-group
                                        .col-sm-10
                                             button.btn.btn-default.accountUpdateSubmit(type='submit') Save
                              .col-md-6
                                div.half-padding
                                  button.btn.btn-primary.editAccountButton(type="button") Edit
                                  button.btn.btn-primary.loginAsAccountButton(type="button") Login as Account
                                  button.btn.btn-primary.emailAccountButton(type="button") Send Recovery Email
                                  .deleteButtons(style="float: right;")
                                    button.btn.btn-danger.deactivateAccountButton(type="button") Deactivate Account
                                    button.btn.btn-danger.deleteAccountButton(type="button") Delete Account
                                  p &nbsp;

block css
    link(href='libs/datatables/media/css/dataTables.bootstrap.min.css', rel='stylesheet')
    link(href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.1/styles/default.min.css')

block js
    script(src='libs/datatables/media/js/jquery.dataTables.min.js')
    script(src='libs/datatables/media/js/dataTables.bootstrap.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.1/highlight.min.js')
    script(src='js/account_details.js')

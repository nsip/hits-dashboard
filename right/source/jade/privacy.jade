extends ./parts/layout.jade
block vars
    - page = 'Privacy';
    - area = 'NA';
block main

    .main-heading
        .main-title
            ol.breadcrumb
        // .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .pages.pages_dashboard
        .template
            .row
                .col-md-12
                    .container-fluid.half-padding
                        .row
                            .col-md-12
                                .panel.panel-info
                                    .panel-heading
                                        h2.panel-title Privacy
                                    .panel-body
                                        p Warning – do not upload sensitive or personally identifiable information to the Hub Integration Testing Service (HITS).
                                        p The operators of HITS cannot guarantee the security and confidentiality of any information provided to or downloaded from HITS.
                                        p Only non-identifiable or “dummy” data should be with the HITS site. All data generated by HITS to support test cases is randomly generated.
                                        p
                                          span Please contact HITS support
                                          span &nbsp;
                                          a(href="mailto:info@nsip.edu.au") info@nsip.edu.au
                                          span &nbsp;
                                          span if you have any queries.”
block css
block js
    if !release
        script(src='js/template/index.js')

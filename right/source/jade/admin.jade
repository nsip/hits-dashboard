extends ./parts/layout.jade
block vars
    - page = 'Accounts';
    - area = 'Admin';
    - development = false;
block main
    .main-heading
        .main-title
            ol.breadcrumb
                li
                    a(href="./") Admin
                li.active Accounts
        .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .template.template__table_data
            .row
                .col-md-12
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Accounts
                        .panel-body
                            .container-fluid.half-padding
                                #buttons
                                table.datalist__table.table.datatable.display.table-hover(id='admin-accounts', width='100%')

    .container-fluid.half-padding
        .template.template__blank
            .row
                .col-md-12
                    h3 Create new account
                    form
                        .form-group
                            input.form-control#create-name(name="name", type='text', placeholder='Name of Account')
                        .form-group
                            input.form-control#create-email(name="type", type='text', placeholder='Email')
                        .form-group.login__action
                            .login__submit
                                button.btn.btn-default#create-create(type='submit') Create

block css
    link(href='libs/datatables/media/css/dataTables.bootstrap.min.css', rel='stylesheet')
block js
    script(src='libs/datatables/media/js/jquery.dataTables.min.js')
    script(src='libs/datatables/media/js/dataTables.bootstrap.js')
    script(src='js/admin.js')
